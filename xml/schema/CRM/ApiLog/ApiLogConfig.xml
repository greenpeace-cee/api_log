<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
    <base>CRM/ApiLog</base>
    <class>ApiLogConfig</class>
    <name>civicrm_api_log_config</name>
    <comment>Entity which contains Api Log configurations</comment>
    <log>true</log>
    <field>
        <name>id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Unique ApiLogConfig ID</comment>
        <html>
            <type>Number</type>
        </html>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>

    <field>
        <name>title</name>
        <title>Title</title>
        <type>varchar</type>
        <length>255</length>
        <required>true</required>
    </field>

    <field>
        <name>entity_filter</name>
        <title>Entity Filter</title>
        <type>varchar</type>
        <length>255</length>
        <required>true</required>
    </field>

    <field>
        <name>action_filter</name>
        <title>Action Filter</title>
        <type>varchar</type>
        <length>255</length>
        <required>true</required>
    </field>

    <field>
        <name>request_filter</name>
        <title>Request Filter</title>
        <type>longtext</type>
        <required>true</required>
    </field>

    <field>
        <name>response_filter</name>
        <title>Response Filter</title>
        <type>longtext</type>
        <required>true</required>
    </field>

    <field>
        <name>success_filter</name>
        <title>Success Filter</title>
        <type>int unsigned</type>
        <required>false</required>
        <comment>Success filter based on option group</comment>
        <default>1</default>
        <pseudoconstant>
            <optionGroupName>api_request_status</optionGroupName>
        </pseudoconstant>
        <html>
            <type>Select</type>
        </html>
    </field>

</table>
